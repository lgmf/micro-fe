{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:vue/essential"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "rules": {
    "import/prefer-default-export": "off"
  },
  "plugins": [
    "jest"
  ],
  "overrides": [
    {
      "files": [
        "**/src/**/*.spec.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}